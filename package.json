{
    "name": "@fab1o/amazon-alert",
    "version": "1.0.5",
    "description": "A price alert for an Amazon product.",
    "main": "src/index.js",
    "author": {
        "name": "Fabio Costa",
        "url": "https://github.com/fab1o"
    },
    "scripts": {
        "start": "node src/index.js",
        "start-test": "node src/index.js -u https://www.amazon.com/dp/B09KS66VN7 -p 10 -f Daily",
        "pkg": "pkg .",
        "optx": "node index.js -p https://www.amazon.com/dp/B0812JPZFT",
        "arx": "node index.js -p https://www.amazon.com/dp/B09KS66VN7"
    },
    "license": "MIT",
    "type": "commonjs",
    "dependencies": {
        "@fab1o/node-utility": "1.6.1",
        "inquirer": "^8.0.0",
        "puppeteer": "19.11.1",
        "puppeteer-core": "19.11.1",
        "puppeteer-extra": "3.3.6",
        "puppeteer-extra-plugin-stealth": "2.11.2",
        "yargs": "17.7.2"
    },
    "bin": {
        "amazon-alert": "src/index.js"
    },
    "pkg": {
        "scripts": [
            "src/**/*.js"
        ],
        "assets": [
            "./asset/**/*",
            "./node_modules/vm2/**/*",
            "./node_modules/@fab1o/**",
            "./node_modules/inquirer/**",
            "./node_modules/@puppeteer/**",
            "./node_modules/puppeteer/**",
            "./node_modules/puppeteer-extra/**",
            "./node_modules/puppeteer-extra-plugin/**",
            "./node_modules/puppeteer-extra-plugin-stealth/**",
            "./node_modules/@babel/**",
            "./node_modules/yargs/**"
        ],
        "outputPath": "dist"
    },
    "devDependencies": {
        "pkg": "^5.8.1"
    }
}
